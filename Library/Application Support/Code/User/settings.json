{
  // Vim
  "vim.leader": "<space>",
  "vim.foldfix": true,
  "vim.useSystemClipboard": true,
  "vim.surround": true,
  "vim.smartRelativeLine": true,
  "editor.lineNumbers": "relative",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<leader>",
        "w",
        "v"
      ],
      "commands": [
        "workbench.action.splitEditorInGroup"
      ]
    },
    {
      "before": [
        "<leader>",
        "w",
        "s"
      ],
      "commands": [
        "workbench.action.splitEditorOrthogonal"
      ]
    },
    {
      "before": [
        "<leader>",
        "w",
        "c"
      ],
      "commands": [
        "workbench.action.closeActiveEditor"
      ]
    },
    {
      "before": [
        "<leader>",
        "w",
        "h"
      ],
      "commands": [
        "workbench.action.closeActiveEditor"
      ]
    },
    {
      "before": [
        "<leader>",
        "w",
        "j"
      ],
      "commands": [
        "workbench.action.closeActiveEditor"
      ]
    },
    {
      "before": [
        "<leader>",
        "w",
        "k"
      ],
      "commands": [
        "workbench.action.closeActiveEditor"
      ]
    },
    {
      "before": [
        "<leader>",
        "w",
        "l"
      ],
      "commands": [
        "workbench.action.closeActiveEditor"
      ]
    },
    {
      "before": [
        "<leader>",
        "f",
        "s"
      ],
      "commands": [
        "workbench.action.files.save"
      ]
    },
    {
      "before": [
        "<leader>",
        "q"
      ],
      "commands": [
        ":q"
      ]
    },
    {
      "before": [
        "<leader>",
        "o",
        "p"
      ],
      "commands": [
        "workbench.action.toggleSidebarVisibility"
      ]
    },
    {
      "before": [
        "<Tab>"
      ],
      "after": [
        "<%>"
      ]
    }
  ],
  "vim.insertModeKeyBindingsNonRecursive": [
    { "before": [ "<C-a>" ],
      "commands": [ "cursorHome" ] },
    { "before": [ "<C-e>" ],
      "commands": [ "cursorEnd" ] }
  ],

  // Terminal
  "terminal.explorerKind": "external",
  "terminal.external.osxExec": "alacritty.app",
  "terminal.external.linuxExec": "alacritty",
  "terminal.integrated.cwd": "${workspaceFolder}",
  "terminal.integrated.splitCwd": "workspaceRoot",

  // Editor 
  "editor.fontFamily": "Hack Nerd Font",
  "editor.suggestSelection": "first",
  "editor.wordWrap": "on",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.defaultFormatter": "vscodevim.vim",
  "editor.fontSize": 13,
  "editor.selectionHighlight": false,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.tabCompletion": "onlySnippets",
  "editor.wordBasedSuggestions": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "editor.smoothScrolling": true,
  "zenMode.fullScreen": false,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "java.semanticHighlighting.enabled": true,
  "sync.gist": "59203f673cfbe015581bb42bd67049f7",
  "workbench.startupEditor": "newUntitledFile",
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  "explorer.confirmDragAndDrop": false,
  "vsicons.dontShowNewVersionMessage": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "telemetry.telemetryLevel": "off",
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "emmet.includeLanguages": {
    "django-html": "html",
    "markdown": "html"
  },
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [
      80
    ],
  },
  "editor.accessibilitySupport": "off",
  "latex-workshop.view.pdf.viewer": "tab",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "markdown-pdf.headerTemplate": "<div style=\"font-size: 9px; margin-left: auto; margin-right: 1cm; \"> <span class='date'></span></div>",
  /* https://github.com/Haruno19/dotfiles/tree/main/MacOS/Minimal%20Green */
  "extensions.ignoreRecommendations": true,
  "editor.fontLigatures": true,
  "customizeUI.stylesheet": {
    ".tabs-container ": "padding-top:7px; padding-left:2px; padding-bottom:5px",
    ".tabs-container > .tab": "border-radius: 7px 7px 7px 7px; height: 20px; margin-left: 5px; padding-right:4px",
    ".monaco-editor .suggest-widget": "border-radius: 10px 10px 10px 10px; overflow:hidden;"
  },

  // UI
  "workbench.colorCustomizations": {
    "editor.background": "#1a1a1a",
    "tab.activeBackground": "#0f0f0f",
    "tab.inactiveBackground": "#1a1a1a",
    "sideBar.background": "#0f0f0f",
    "sideBarSectionHeader.background": "#0f0f0f",
    "activityBar.background": "#0f0f0f",
    "statusBar.background": "#0f0f0f",
    "scrollbarSlider.activeBackground": "#0f0f0f"
  },
  "workbench.list.smoothScrolling": true,
  "customizeUI.activityBar": "bottom",
  "customizeUI.titleBar": "regular",
  "security.workspace.trust.untrustedFiles": "open",
  "window.autoDetectHighContrast": false,
  "emmet.excludeLanguages": [],
  "workbench.layoutControl.enabled": false,
  "workbench.colorTheme": "doom-one",
  "window.titleBarStyle": "custom",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "workbench.activityBar.visible": false,
}